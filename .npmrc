# Automatically install peer dependencies
auto-install-peers=true

# Allow peer dependency version mismatches (recommended for flexibility)
strict-peer-dependencies=false

# Configure public registry
registry=https://registry.npmjs.org/

# Enable shamefully-hoist for better compatibility with tools expecting flat node_modules
# Set to false for stricter dependency isolation (recommended for most projects)
shamefully-hoist=false

# Allow packages to run pre/post install scripts (needed for native modules)
enable-pre-post-scripts=true
