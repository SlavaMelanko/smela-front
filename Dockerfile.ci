FROM node:22-bookworm-slim

LABEL maintainer="smela-front"
LABEL description="CI/CD image with Node.js 22 and Playwright browsers"

RUN apt-get update && apt-get install -y \
    git \
    curl \
    gpg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

COPY package*.json ./

RUN npm ci

RUN npx playwright install --with-deps chromium

RUN npm cache clean --force

CMD ["/bin/bash"]
